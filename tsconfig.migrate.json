{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["db/**/*"]
}
